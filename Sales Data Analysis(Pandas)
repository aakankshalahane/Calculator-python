        "# Sales data Analysis\n",
        "#1 Sample data , convert date to time, total per product,Monthly revenue"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "#sample dataset\n",
        "data={\n",
        "    'Date': ['2025-01-10','2025-01-15','2025-02-10','2025-02-20'],\n",
        "    'Product': ['A','B','A','C'],\n",
        "    'Revenue': [500, 700, 600, 800]\n",
        "}\n",
        "\n",
        "#DAtatype\n",
        "df= pd.DataFrame(data)\n",
        "\n",
        "#Convert Date to time\n",
        "df['Date'] = pd.to_datetime(df['Date'])\n",
        "\n",
        "#Total revenue per product\n",
        "total_revenue = df.groupby('Product')['Revenue'].sum()\n",
        "print(\"Total Revenue per Product:\\n\", total_revenue)\n",
        "\n",
        "#Monthly Revenue\n",
        "df['Month'] = df['Date'].dt.month\n",
        "monthly_revenue = df.groupby('Month')['Revenue'].sum()\n",
        "print(\"\\nMonthly Revenue:\\n\", monthly_revenue)"
      ],
