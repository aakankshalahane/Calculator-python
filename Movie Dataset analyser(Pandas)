        "import pandas as pd\n",
        "\n",
        "# Sample movie dataset\n",
        "data = {\n",
        "    'Title': ['M1', 'M2', 'M3', 'M4'],\n",
        "    'Genre': ['Romance', 'Drama', 'Action', 'Comedy'],\n",
        "    'Year': [2022, 2023, 2024, 2025],\n",
        "    'Rating': [8.6, 7.5, 8.5, 6.9]\n",
        "}\n",
        "df = pd.DataFrame(data)\n",
        "\n",
        "# Highest rated movie\n",
        "top_movie = df.loc[df['Rating'].idxmax()]['Title']\n",
        "print(\"Highest Rated Movie:\", top_movie)\n",
        "\n",
        "# Average rating per genre\n",
        "avg_rating_genre = df.groupby('Genre')['Rating'].mean()\n",
        "print(\"\\nAverage Rating per Genre:\\n\", avg_rating_genre)\n",
        "\n",
        "# Movies released in 2020\n",
        "movies_2020 = df[df['Year'] == 2020]\n",
        "print(\"\\nMovies Released in 2020:\\n\", movies_2020)\n"
      ]
    }
